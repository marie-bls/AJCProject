@model AjcProject.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var error = ViewData["error"];
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post" asp-controller="AdminProduct" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" id="ProductName" name="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" id="Description" name="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" id="UnitPrice" name = "UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" id="CategoryId" name="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                    <input asp-for="ImagePath" id="ImagePath" name="ImagePath" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            @{
              
                if ((string)error !="")
                {
                                    <div class="alert-danger align-middle">
                                        @ViewData["error"]
                                    </div>
                }
            }

            <div class="form-group">
                    <input id="create" type="submit" value="Create" class="btn btn-primary "  data-target="#exampleModalCenter" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
